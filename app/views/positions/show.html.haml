.row
  %ul.breadcrumb
    %li{data: {component: 'Positions', is: 'total'}}= ""
    - path = []
    - labels = ["All√©e", "Rack", "Etage", "Emplacement"]
    - max = params[:id].split('-').length - 1
    - params[:id].split('-').each_with_index do |p, i|
      - path.push(p)
      %li
        - if max == i
          = "#{labels[i]} #{p}"
        - else
          = link_to "#{labels[i]} #{p}", position_path("#{path.join('-')}")

.row#positions{data: {component: 'Positions', is: "#{params[:id]}"}}
